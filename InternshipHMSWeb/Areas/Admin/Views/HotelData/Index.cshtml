<h2 class="text-muted" style="margin:20px 0 20px 0;font-size:24px"><i class="fa fa-hotel"></i> لیست هتل ها</h2>
<hr />
<div class="k-rtl">
    <div id="grid"></div>
</div>
@section scripts{
    <script src="~/Scripts/PersianKendo.js"></script>
    <script>
        $("#grid").kendoGrid({
            height: 400,
            columns: [
                { field: "Name",title:"نام" },
                { field: "Rate", title: "امتیاز" },
                { command: ["destroy"], width: 100 }
            ],
            toolbar: ["create", "save"],
            dataSource: {
                type: "aspnetmvc-ajax",
                batch: true,
                transport: {
                    read: {
                        url: "HotelData_List_Read"
                    },
                    create: {
                        url: "HotelData_List_Create"
                    },
                    update: {
                        url: "HotelData_List_Update"
                    },
                    destroy: {
                        url: "HotelData_List_Destroy"
                    }
                },
                schema: {
                    data: "Data",
                    model: {
                        id: "ID",
                        fields: {
                            ID: { type: "string" },
                            Name: { type: "string" },
                            Rate: { type: "number" }
                        }
                    }
                },
                serverPaging: true,
                serverSorting: true,
                serverSorting: true,
            },
            columnMenu: true,
            editable: "incell",
            pageable: true,
            navigatable: true,
            selectable: "single row",
            sortable: {
                mode: "single"
            },
            filterable: true,
            scrollable: true
        })

    </script>
}
